<div class="container">
  <form action="/post" method="post" enctype="multipart/form-data">
    <!-- <h1>inside form tag</h1> -->
    <div class="form-group mb-2">
      <label for="caption" class="form-label">Caption</label><br />
      <input type="text" class="form-input" name="caption" />
    </div>
    <div class="form-group mb-2">
      <label for="image" class="form-label">Post Image</label><br />
      <input type="file" class="form-input" name="imageUrl" id="imageUrl" accept="images/*"/>
    </div>
    <button type="submit" class="btn btn-primary">Post</button>
  </form>
</div>
